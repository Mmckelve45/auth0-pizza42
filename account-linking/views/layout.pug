doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Pizza 42 - Account Linking
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: 'Courier New', Courier, monospace;
        background-color: #f5f5f4;
        color: #292524;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
      }
      .container {
        max-width: 600px;
        width: 100%;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }
      .header {
        background-color: #FACC15;
        padding: 40px 20px;
        text-align: center;
        border-bottom: 3px solid #78716c;
      }
      .header h1 {
        font-size: 32px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 3px;
      }
      .content {
        padding: 40px 32px;
      }
      .content h2 {
        font-size: 24px;
        margin-bottom: 16px;
        text-align: center;
      }
      .content p {
        font-size: 14px;
        line-height: 1.6;
        margin: 16px 0;
        color: #57534e;
      }
      .info-box {
        background-color: #fafaf9;
        border-radius: 8px;
        padding: 16px;
        margin: 24px 0;
      }
      .info-box p {
        margin: 8px 0;
        font-size: 13px;
      }
      .info-box strong {
        color: #292524;
        font-weight: 600;
      }
      .button {
        display: inline-block;
        padding: 20px 60px;
        background-color: #FACC15;
        color: #000000;
        text-decoration: none;
        font-weight: 700;
        font-size: 18px;
        text-transform: uppercase;
        letter-spacing: 2px;
        border-radius: 9999px;
        border: none;
        cursor: pointer;
        text-align: center;
        transition: background-color 0.2s;
      }
      .button:hover {
        background-color: #EAB308;
      }
      .button-secondary {
        background-color: #78716c;
        color: white;
      }
      .button-secondary:hover {
        background-color: #57534e;
      }
      .button-container {
        text-align: center;
        margin: 32px 0;
      }
      .error-box {
        background-color: #fef2f2;
        border-left: 4px solid #ef4444;
        padding: 16px;
        margin: 24px 0;
      }
      .error-box p {
        color: #991b1b;
        font-weight: 600;
      }
      .success-box {
        background-color: #f0fdf4;
        border-left: 4px solid #22c55e;
        padding: 16px;
        margin: 24px 0;
      }
      .success-box p {
        color: #166534;
        font-weight: 600;
      }
      .footer {
        text-align: center;
        padding: 20px;
        font-size: 12px;
        color: #78716c;
      }
      code {
        background-color: #f5f5f4;
        padding: 2px 6px;
        border-radius: 4px;
        font-family: monospace;
        font-size: 12px;
      }
